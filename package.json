{
  "name": "beidou",
  "description": "Isomorphic framework for server-rendered React apps",
  "scripts": {
    "lint": "make lint",
    "test": "make test",
    "install": "lerna bootstrap",
    "reinstall-examples-dependencies": "make reinstall-examples-dependencies",
    "clean": "make clean",
    "ci": "make ci",
    "changelog": "make changelog",
    "precommit": "lint-staged"
  },
  "author": "weichunpeng",
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "egg-bin": "^4.0.4",
    "eslint": "^4.11.0",
    "eslint-config-beidou": "1.0.0-alpha.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.13.4",
    "lerna": "^2.0.0",
    "lerna-changelog": "^0.5.0",
    "lint-staged": "^4.0.0",
    "prettier": "^1.11.0"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "license": "MIT",
  "config": {
    "alicov": {
      "threshold": 90
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,scss,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": "https://github.com/alibaba/beidou"
}
