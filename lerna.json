{
  "lerna": "2.0.0",
  "version": "0.3.0",
  "changelog": {
    "repo": "alibaba/beidou",
    "labels": {
      "tag: bc": ":boom: Breaking Change",
      "tag: feat": ":rocket: New Feature",
      "tag: fix": ":bug: Bug Fix",
      "tag: polish": ":nail_care: Polish",
      "tag: doc": ":memo: Documentation",
      "tag: internal": ":house: Internal"
    }
  },
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignore": [
        "*.md",
        "test/**",
        "node_modules"
      ],
      "message": "chore(release): publish %s"
    }
  },
  "npmClient": "yarn"
}
